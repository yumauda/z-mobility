{
  "name": "tank",
  "version": "1.0.0",
  "description": "tank使用",
  "main": "index.js",
  "type": "module",
  "author": "",
  "license": "ISC",
  "scripts": {
    "dev": "npm run compress:images && npm run generate:styles && run-p dev:*",
    "dev:vite": "vite",
    "dev:sass": "sass src/sass:css --watch --no-source-map",
    "dev:sass-files": "chokidar \"src/sass/**/*.scss\" --ignore \"src/sass/styles.scss\" -c \"npm run generate:styles\"",
    "dev:images": "chokidar \"src/images/**/*\" -c \"npm run compress:images\"",
    "copy:images": "cpx \"src/images/**/*\" images",
    "compress:images": "node scripts/compress-images.js",
    "generate:styles": "node scripts/generate-styles.js",
    "build": "vite build",
    "preview": "vite preview"
  },
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "cpx2": "^7.0.2",
    "glob": "^10.5.0",
    "imagemin": "^9.0.1",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-pngquant": "^8.0.0",
    "imagemin-svgo": "^7.1.0",
    "imagemin-webp": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.94.2",
    "sass-migrator": "^1.5.2",
    "vite": "^5.4.21"
  }
}
